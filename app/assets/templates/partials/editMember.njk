<div id="editMember" class="full-screen-background d-none">
   <div class="container d-flex justify-content-center align-items-center h-100">
      <div class="form">
         <div class="form-head">
            <h1 class="fz-5 font-bold">Edit Member</h1>
            <button id="closeEditForm" class="icon-button icon icon__clear p-0">
               <span></span>
           </button>
         </div>
         <div class="form-content">
            <div class="form-part d-flex flex-column">
               <h3 class="form-title">Account</h3>
               <label class="form-label" for="editAccountName">Name</label>
               <input class="form-input" id="editAccountName-name" type="text" value="Emir Wicks" disabled>
               <label class="form-label" for="editAccountEmail">Email</label>
               <input class="form-input" id="editAccountEmail" type="text" value="emir.wicks@mail.com" disabled>
            </div>
            <div class="form-part"> 
               <h3 class="form-title">Verification</h3>
               <div class="form-status d-flex justify-content-between mb-4">
                  <button  class="icon-button icon icon__checked p-0 d-flex align-items-center">
                     <span class="mr-2"></span>
                     <p>Verified</p>
                  </button>

                  <p class="small-text"> 2020/4/12</p>
               </div>
               <button class="btn btn-lg btn-disabled mb-4 disabled">Send Verification Mail</button>
            </div>
            <div class="form-part"> 
               <h3 class="form-title">Access Level</h3>
               <select  class="form-select mb-4" name="admin-level" id="editAdminLevel">
                  <option value="">Admin</option>
              </select>
            </div>
            <div class="form-part d-flex flex-column"> 
               <h3 class="form-title">Custom Access</h3>
               <label for="editLecture" class="form-checkbox">
                  <input type="checkbox" id="editLecture" name="Lecture" class="ml-2">
                  Lecture
               </label>  
               <label for="editCoupon" class="form-checkbox">
                  <input type="checkbox" id="editCoupon" name="Lecture" class="ml-2">
                  Coupon
               </label>  
               <label for="editMessage" class="form-checkbox">
                  <input type="checkbox" id="editMessage" name="Lecture" class="ml-2">
                  Message
               </label>  
               <label for="editSetting" class="form-checkbox">
                  <input type="checkbox" id="editSetting" name="Lecture" class="ml-2">
                  Setting
               </label>  
               <label for="editTaskMenu" class="form-checkbox">
                  <input type="checkbox" id="editTaskMenu" name="Lecture" class="ml-2">
                  Task Menu
               </label>
            
            </div>
            <div class="form-part mb-11"> 
               <h3 class="form-title">Deactivate Account</h3>
               <button  class="icon-button icon icon__problem p-0 d-flex align-items-center mb-4">
                  <span class="mr-2"></span>
                  <p class="text-warn">This cannot be undone!</p>
              </button>
              <input type="button" class="btn btn-lg btn-warn" value="Deactivate This Account">
            </div>
         </div>
         <div class="form-footer">
            <div class="buttons">
               <input type="button" class="btn btn-white mr-4" value="Cancel">
               <input type="button" class="btn btn-primary" value="Update">
            </div>
         </div>
      </div>
   </div>
</div>